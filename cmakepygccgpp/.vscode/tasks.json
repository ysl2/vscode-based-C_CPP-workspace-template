{
    "version": "2.0.0",
    "tasks"  : [
        {
            "label"  : "build(debug)",
            "command": "python",
            "args"   : [
                "build.py",
                "debug",                                    // 编译类型
                "${workspaceRootFolderName}"                // 工程名称
            ],
            "problemMatcher": {
                "owner"       : "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp"  : "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file"    : 1,
                    "line"    : 2,
                    "column"  : 3,
                    "severity": 4,
                    "message" : 5
                }
            },
            "group": {
                "kind"     : "build",
                "isDefault": true
            }
        },
        {
            "label"  : "build(release)",
            "command": "python",
            "args"   : [
                "build.py",
                "release",                                  // 编译类型
                "${workspaceRootFolderName}"                // 工程名称
            ],
            "problemMatcher": {
                "owner"       : "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp"  : "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file"    : 1,
                    "line"    : 2,
                    "column"  : 3,
                    "severity": 4,
                    "message" : 5
                }
            }
        },
        {
            "label"  : "clean",
            "command": "python",
            "args"   : [
                "build.py",
                "clean",                                    // 编译类型
                "${workspaceRootFolderName}"                // 工程名称
            ],
            "problemMatcher": [],
            "presentation"  : {
                "echo"            : true,
                "reveal"          : "always",
                "focus"           : false,
                "panel"           : "new",
                "showReuseMessage": true
            }
        },
        {
            "label"         : "run(debug)",
            "command"       : "${workspaceRoot}/bin/debug/${workspaceRootFolderName}.exe",
            "problemMatcher": [],
            "presentation"  : {
                "echo"            : true,
                "reveal"          : "always",
                "focus"           : false,
                "panel"           : "new",
                "showReuseMessage": true
            }
        },
        {
            "label"         : "run(release)",
            "command"       : "${workspaceRoot}/bin/release/${workspaceRootFolderName}.exe",
            "problemMatcher": [],
            "presentation"  : {
                "echo"            : true,
                "reveal"          : "always",
                "focus"           : false,
                "panel"           : "new",
                "showReuseMessage": true
            }
        }
    ]
}
